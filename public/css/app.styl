@import 'global.styl'

@font-face {
  font-family: 'Pictos';
  src: url('../fonts/pictos-web.eot');
  src: local('â˜º'), url('../fonts/pictos-web.woff') format('woff'), url('../fonts/pictos-web.ttf') format('truetype'), url('../fonts/pictos-web.svg#webfontIyfZbseF') format('svg');
  font-weight: normal;
  font-style: normal;
}

html,
body
  background $darker-blue

body
  margin 0
  padding 0
  font 14px/1.231 Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-font-smoothing antialiased
  width 100%
  position relative

html.infographic-page,
html.infographic-page body
  overflow hidden
  color $gray
  background $darker-blue
  width 100%
  height 100%

.icon
  font-family "Pictos"
  font-weight normal !important

.senate
  position absolute
  top 0
  left 0
  height 0
  width 100%

.population
  position absolute
  bottom 0
  left 0
  height 0
  width 100%

.scroll-bar
  position absolute
  width 100%
  height 40px
  top 0
  left 0


/* BarChart */

.bar-chart
  padding 0 30px

.bar-chart h2
  font-size 18px
  font-weight 1000
  letter-spacing -1px
  margin 0 0 30px

.bar-chart ul
  position relative
  display block
  list-style none
  padding 0
  margin 0
  width 200px

.bar-chart li
  display block
  padding 0
  margin 0 0 15px

.bar-chart .bar-outer
  position relative
  background $dark-blue
  height 2px
  width 100%
  margin-bottom 5px

.bar-chart .bar-inner
  position absolute
  left 0
  top 0
  width 0
  height 2px
  background $red
  transitioned(0.2s linear width)

.bar-chart li p
  margin 0
  padding 0

.bar-chart .percent
  color $red
  padding 0 5px 0 0



/* ScrollBar */

.scroll-bar
  position absolute
  left 0
  width 100%
  height 40px
  padding 0

.scroll-bar .play-button
  position absolute
  height 40px
  width 40px
  left 30px
  background $white
  text-align center
  line-height 44px
  font-size 18px

.scroll-bar-track
  position absolute
  left 100px
  top 0
  background $dark-blue
  height 40px
  width 500px
  cursor pointer

.scroll-bar-handle
  display block
  position absolute
  top 0
  left 0
  background $white
  height 40px
  width 80px
  font-size 18px
  font-weight 900
  letter-spacing -1px
  line-height 40px
  text-align center
  cursor pointer


/* Faces */

.faces
  position absolute
  top 0
  left 250px
  list-style none
  padding 0
  margin 0

.faces li
  display block
  position absolute
  overflow hidden
  margin 0
  padding 0
  top 0
  left 0
  width 0
  height 0
  background-color $darker-blue
  background-repeat none
  background-size cover

.faces li img
  display block
  position relative
  max-height 100%
  height 100%
  opacity 1
  z-index 2

.face-overlay
  display block
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  background $black
  opacity 1
  z-index 1

.faces.show-dots li img
  opacity 0

.face-overlay.white
  background $caucasian

.face-overlay.asian
  background $asian

.face-overlay.nativeamerican
  background $nativeamerican

.face-overlay.black
  background $black

.face-overlay.hispanic
  background $hispanic

