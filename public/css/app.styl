@import 'global.styl'

@font-face {
  font-family: 'Pictos';
  src: url('../fonts/pictos-web.eot');
  src: local('â˜º'), url('../fonts/pictos-web.woff') format('woff'), url('../fonts/pictos-web.ttf') format('truetype'), url('../fonts/pictos-web.svg#webfontIyfZbseF') format('svg');
  font-weight: normal;
  font-style: normal;
}

html,
body
  background $dark-blue

body
  margin 0
  padding 0
  font 14px/1.231 Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-font-smoothing antialiased
  width 100%
  position relative

html.infographic-page,
html.infographic-page body
  overflow hidden
  color $gray
  background $dark-blue
  width 100%
  height 100%

.infographic-page body *
  unselectable()

.icon
  font-family "Pictos"
  font-weight normal !important

.senate
  position absolute
  top 0
  left 0
  height 0
  width 100%

.population
  position absolute
  bottom 0
  left 0
  height 0
  width 100%

.scroll-bar
  position absolute
  width 100%
  height 40px
  top 0
  left 0

.white
  background $caucasian

.asian
  background $asian

.american_indian,
.natives
  background $natives

.black
  background $black

.hispanic
  background $hispanic


/* Header */


header
  height 50px
  background $darker-blue
  width 100%
  color $gray
  font-size 14px

header a.back-button
  display block
  float left
  line-height 50px
  padding 0 5px 0 15px
  height 50px
  color $gray
  text-decoration none

header a.back-button .icon
  padding-right 5px

header a
  text-decoration none
  transitioned(0.1s linear color)
  line-height 50px
  height 50px
  color $gray

header a:hover
  color $white

header .icon
  font-size 18px

header h1
  position relative
  font-size 14px
  float left
  line-height 50px
  padding 0 0 0 5px
  margin 0
  display block

header .mode-toggle
  position relative
  float left
  list-style none
  padding 0
  margin 0 0 0 30px
  height 50px

header .mode-toggle li
  display block
  float left
  padding 0
  margin 0 0 0 15px

header .mode-toggle li a
  display block
  position relative
  text-align center
  font-weight bold
  font-size 14px

header .mode-toggle li a.active
  color $white

header .legend
  list-style none
  padding 0
  margin 0
  position absolute
  top 0
  right 15px

header .legend li
  padding 0
  margin 0 5px 0 0
  display block
  position relative
  float left
  color $gray
  font-size 14px
  line-height 50px

header .legend li .color
  width 14px
  height 14px
  display block
  margin 18px 5px
  rounded(14px)
  float left



/* BarChart */

.bar-chart
  position absolute
  overflow hidden
  top 0
  left 0
  width 100%
  height 20px

.senate .bar-chart
  top auto
  bottom 0px

.bar-chart h2
  position absolute
  top 0
  left 0
  font-size 12px
  line-height 20px
  font-weight 1000
  letter-spacing -1px
  margin 0 0 0 15px
  z-index 5
  color $dark-blue
  text-transform uppercase

.bar-chart ul
  position relative
  display block
  list-style none
  padding 0
  margin 0
  width 100%
  height 20px

.bar-chart li
  position relative
  display block
  padding 0
  margin 0
  float left
  height 100%
  transitioned(0.2s linear width)



/* ScrollBar */

.scroll-bar
  position absolute
  left 0
  width 100%
  height 40px
  padding 0

.scroll-bar .play-button
  position absolute
  height 40px
  width 40px
  left 0px
  cursor pointer
  background $white
  text-align center
  line-height 44px
  font-size 18px

.scroll-bar-track
  position absolute
  left 40px
  top 0
  background $darker-blue
  height 40px
  width 500px
  cursor pointer

.scroll-bar-handle
  display block
  position absolute
  top 0
  left 0
  background $white
  height 40px
  width 80px
  font-size 18px
  font-weight 900
  letter-spacing -1px
  line-height 40px
  text-align center
  cursor pointer


/* Faces */

.faces
  position absolute
  top 0
  left 0
  width 100%
  list-style none
  padding 0
  margin 0

.faces li
  display block
  position absolute
  overflow hidden
  text-align center
  margin 0
  padding 0
  top 0
  left 0
  width 0
  height 0

.faces li img
  display block
  position absolute
  top 0
  left 0
  max-width 100%
  width 100%
  opacity 0
  transitioned(0.3s linear opacity)
  z-index 2

.face-dot
  display block
  position relative
  margin 0 auto
  width 25px
  height 25px
  opacity 1
  rounded(25px)
  transitioned(0.3s linear opacity)
  z-index 1

.flipped .face-dot
  opacity 0

.flipped .faces li img
  opacity 1
